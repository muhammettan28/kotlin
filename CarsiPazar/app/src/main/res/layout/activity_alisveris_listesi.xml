<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_id"
    tools:context=".alisveris_listesi"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"

        android:orientation="vertical"
        android:weightSum="15"
        >

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpagerAlisVeris"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="14">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tablayoutAlisveris"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:tabIndicatorColor="@color/black"

                app:tabTextColor="@color/main_color">

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tabItemAlisverisEski"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eski Alışveriş Listeleri" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tabItemAlisverisYeni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yeni Alışveriş Listesi +" />
            </com.google.android.material.tabs.TabLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>